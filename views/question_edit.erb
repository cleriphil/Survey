

<form action='/admin/questions/<%= @question.id %>' method='post'>
  <div class='form-group'>
    <input name='_method' type='hidden' value='patch'>
    <label for='description'>Enter in your edited question:</label>
    <input id='description' name='description' type='text' value='<%= @question.description %>' autofocus required>
  </div>
  <button class='btn-default'>Submit</button>
</form>

<br>
<form action='/admin/questions/<%= @question.id %>' method='post'>
  <div class='form-group'>
    <input name="_method" type="hidden" value="delete">
    <button id='delete_question' class='btn-danger'>Delete Question</button>
  </div>
</form>
